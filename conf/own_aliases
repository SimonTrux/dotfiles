#.bashrc

## FUNCTIONS and utilities
exists(){
  command -v "$1" &>/dev/null
}
alias so="source ~/.bashrc"

# editor
if exists nvim ; then
  export EDITOR="nvim"
  alias n="nvim"
  alias nvimrc="nvim ~/.config/nvim"
else
  export EDITOR="vi"
fi

# Better cat if bat installed, better cd with zoxide
exists bat && alias cat="bat" || exists batcat && alias cat="batcat"
exists zoxide && alias cd="z"

# ls
alias ls="ls --color=auto"
alias ll="ls -l --color=auto"
alias la="ls -la"
alias lh="ls -lahS"
alias lt="ls -lat"


# Edit config files by name right away
alias vimrc="$EDITOR ~/.vimrc"
alias gitconfig="$EDITOR ~/.gitconfig"
alias tmux.conf="$EDITOR ~/.tmux.conf"
alias bashrc="$EDITOR ~/.bashrc.d/own_bashrc"
alias aliases="$EDITOR ~/.bashrc.d/own_aliases"

exists kubectl && alias k_get_ns_objects="kubectl api-resources --verbs=list --namespaced -o name | xargs -n 1 kubectl get --show-kind --ignore-not-found"
exists kubectl && alias kns='kubectl config set-context --current --namespace '
